<h1 class="font-bold underline text-black dark:text-white">Activity Log</h1>

<div id="events" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-x-3 gap-y-8">
  <% @events.each do |event| %>
    <div id="<%= dom_id event %>">
      <div class="inline-flex justify-between w-full">
        <div>
          <h4
            class="text-base font-semibold text-black dark:text-white mt-4 relative"
          >
            Action: <%= event.action %>
          </h4>
          <p
            class="relative z-10 mt-2 text-sm text-zinc-500 dark:text-zinc-400"
          >
            User Agent: <%= event.user_agent %>
          </p>
          <p
            class="relative z-10 mt-2 text-sm text-zinc-500 dark:text-zinc-400"
          >
            IP Address: <%= event.ip_address %>
          </p>
          <p
            class="relative z-10 mt-2 text-sm text-zinc-500 dark:text-zinc-400"
          >
            Created date: <%= event.created_at %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
